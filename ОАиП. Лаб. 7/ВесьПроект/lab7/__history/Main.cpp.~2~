//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Main.h"
#include "HashTable.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
Table* tbl;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	tbl = NULL;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	Memo->Clear();
	tbl = new Table;
	randomize();

	for (int i = 0; i < 20; i++)
	{
		tbl->Add(new Zap(random(100), random(100)));
	}

	UnicodeString* us = tbl->ToPrint();

	for(int i = 0; i < 10; i++)
	{
		Memo->Lines->Add(us[i]);
	}

}
//---------------------------------------------------------------------------

void __fastcall TForm1::Button2Click(TObject *Sender)
{
	Memo1->Clear();
	Memo2->Clear();
	int num;
	try
	{
		num = Edit1->Text.ToInt();
	}
	catch(Exception* e)
	{
		ShowMessage(e->Message);
		return;
	}

	Table* tb1 = new Table;
	Table* tb2 = new Table;

	if(tbl != NULL)
		tbl->Cut(tb1, tb2, num);

	UnicodeString *us1, *us2;
	us1 = tb1->ToPrint();
	us2 = tb2->ToPrint();

	for(int i = 0; i < 10; i++)
	{
		Memo1->Lines->Add(us1[i]);
		Memo2->Lines->Add(us2[i]);
	}
}
//---------------------------------------------------------------------------

