//---------------------------------------------------------------------------


#pragma hdrstop
#include "HashTable.h"

//---------------------------------------------------------------------------

#pragma package(smart_init)

Table::Table()
{
	tbl = new Zap[10];
	for(int i = 0; i < 10; i++)
		tbl[i].isFull = false;
}


 int Table::h(Zap* data)
 {
	return data->key%10;
 }

 void Table::Add(Zap* data)
 {
	if(!tbl[h(data)].isFull)
	{
		tbl[h(data)] = *data;
        tbl[h(data)].isFull = true;
	}
	else
	{
		Zap* nxt = tbl + h(data);
		while(nxt->next != NULL)
		{
			nxt = nxt->next;
		}
		nxt->next = data;
	}
 }

